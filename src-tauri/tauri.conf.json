{
  "productName": "LexiOS",
  "version": "1.0.0",
  "identifier": "app.lexios",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "bun run build:tauri",
    "beforeDevCommand": "bun run dev"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "alwaysOnTop": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "Made with love by Kassam for Lexi",
    "category": "Utility",
    "shortDescription": "A love letter in the form of an OS",
    "longDescription": "A love letter in the form of an OS, made for Lexi",
    "macOS": {
      "minimumSystemVersion": "10.13",
      "infoPlist": "./Info.plist",
      "entitlements": "./entitlements.plist"
    },
    "windows": {
      "digestAlgorithm": "sha256"
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  }
}
